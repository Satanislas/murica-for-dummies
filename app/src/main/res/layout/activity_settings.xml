<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <Button
        android:id="@+id/HomeButton"
        android:layout_width="82dp"
        android:layout_height="85dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:icon="@android:drawable/stat_notify_more"
        app:iconSize="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ConfirmButton"
        android:layout_width="82dp"
        android:layout_height="85dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:text="☑️"
        android:textSize="36sp"
        app:iconSize="36dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/ColorButton1"
        android:layout_width="144dp"
        android:layout_height="56dp"
        android:layout_marginTop="140dp"
        android:checked="false"
        android:textOff="Default"
        android:textOn="Selected : Default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/ColorButton2"
        android:layout_width="144dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:checked="false"
        android:textOff="Pink"
        android:textOn="Selected : Pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ColorButton1" />

    <ToggleButton
        android:id="@+id/ColorButton3"
        android:layout_width="144dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:checked="false"
        android:textOff="Lime"
        android:textOn="Selected : Lime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ColorButton2" />

    <ToggleButton
        android:id="@+id/ColorButton4"
        android:layout_width="144dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:checked="false"
        android:textOff="Ocean Blue"
        android:textOn="Selected : Ocean Blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ColorButton3" />

    <ToggleButton
        android:id="@+id/ColorButton5"
        android:layout_width="144dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:checked="false"
        android:textOff="Imperial"
        android:textOn="Selected : Imperial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ColorButton4" />

    <ToggleButton
        android:id="@+id/ColorButton6"
        android:layout_width="144dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:checked="false"
        android:textOff="Sunset"
        android:textOn="Selected : Sunset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ColorButton5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose color theme :"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.127" />


</androidx.constraintlayout.widget.ConstraintLayout>